% Content below originally by Stefan, file mtd-aplas09.fmt, has been changed for my thesis
%include forall.fmt
%include exists.fmt
%include polycode.fmt

%% ----------------------------------------------------------------------------
%% GENERAL
%% ----------------------------------------------------------------------------

\renewcommand{\hscodestyle}{\centering}
\arrayhs

%% ----------------------------------------------------------------------------
%% PUNCTUATION
%% ----------------------------------------------------------------------------
%format ^   = "{}"
%format ... = "\cdots"

%format (sup(x)(y)) = x "^{" y "}"

%% ----------------------------------------------------------------------------
%% BINDERS
%% ----------------------------------------------------------------------------

%format \       = "\uplambda\hsforall"
%format period_ = ".\,"

%% ----------------------------------------------------------------------------
%% OPERATORS
%% ----------------------------------------------------------------------------

%format +-  = "\vdash"
%format +-> = "\mapsto"
%format :   = "\mathrel{:}"
%format ~   = "\mathrel{\sim}"
%format <.  = "\sqsubset"
%format >>  = "\mathrel{\triangleright}"

%format arr(x) = "\xrightarrow{" x "}"

%format `U` = "\cup"
%format `V` = "\Downarrow"

%format `u` = "\sqcup"

%% ----------------------------------------------------------------------------
%% TYPE CONSTANTS
%% ----------------------------------------------------------------------------

%format base = "\ty{\const{base}}"
%format Int  = "\ty{\const{Int}}"
%format Bool = "\ty{\const{Bool}}"

%% ----------------------------------------------------------------------------
%% LIVENESS PROPERTIES
%% ----------------------------------------------------------------------------

%format H = "\ann{\prop{H}}"
%format L = "\ann{\prop{L}}"

%% ----------------------------------------------------------------------------
%% METAVARIABLES
%% ----------------------------------------------------------------------------

%format t_0
%format t_1
%format t_11
%format t_2
%format t_3
%format t'
%format t'_1
%format t'_2
%format t''
%format tStar' = t "^\prime_\star"
%format w_1
%format w_2
%format w'
%format w'_1
%format w'_2

%format Gamma = "\ctx{\Gamma}"

%format beta      = "\ann{\beta}"
%format beta_1    = "\ann{\beta_1}"
%format beta_2    = "\ann{\beta_2}"
%format beta_3    = "\ann{\beta_3}"
%format beta_4    = "\ann{\beta_4}"
%format beta_5    = "\ann{\beta_5}"
%format beta_6    = "\ann{\beta_6}"
%format beta_n    = "\ann{\beta_n}"
%format phi       = "\ann{\varphi}"
%format phi_0     = "\ann{\varphi_0}"
%format phi_1     = "\ann{\varphi_1}"
%format phi_2     = "\ann{\varphi_2}"
%format a	  	  = "\ty{\alpha}"
%format b		  = "\ty{\beta}"
%format sigma     = "\ty{\sigma}"
%format sigma_1   = "\ty{\sigma_1}"
%format sigma_11  = "\ty{\sigma_{11}}"
%format sigma_2   = "\ty{\sigma_2}"
%format sigma_21  = "\ty{\sigma_{21}}"
%format sigma_3   = "\ty{\sigma_3}"
%format sigma'    = "\ty{\sigma^\prime}"
%format sigmaStar = "\ty{\sigma_\star}"

%format FA		  = "\forall"

%% ----------------------------------------------------------------------------
%% METAFUNCTIONS
%% ----------------------------------------------------------------------------

%format fav = "\meta{fav}"