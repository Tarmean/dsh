%% ----------------------------------------------------------------------------
%% SUBVERSION
%% ----------------------------------------------------------------------------

\newcommand{\revision}{%
  \newread\revstream%
  \immediate\openin\revstream=REVISION%
  \immediate\read\revstream to \rev@i%
  \immediate\read\revstream to \rev@ii%
  \immediate\closein\revstream%
  \centerline{\textcolor{red}{\textsf{Revision: \rev@i \rev@ii}}}}

