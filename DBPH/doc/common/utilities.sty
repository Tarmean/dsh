    {\begin{array}{@{\hspace{4em}}l@{}}\hspace{-4em}#3\end{array}}%
  \ifthenelse{\equal{#1}{}}{}{\ \begin{array}{@{}c@{}}#4\end{array} \hspace{1em} \mbox{\small\rulename{#1}}}}






