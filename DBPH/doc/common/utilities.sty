\newcommand{\infrule}[3][]{%
  \ifsc@firstinfrule%
    \sc@firstinfrulefalse%
  \else%
    \qquad%
  \fi%
  \frac%
    {\begin{array}{@{}c@{}}#2\end{array}}%
    {\begin{array}{@{\hspace{4em}}l@{}}\hspace{-4em}#3\end{array}}%
  \ifthenelse{\equal{#1}{}}{}{\ \mbox{\small\rulename{#1}}}}


